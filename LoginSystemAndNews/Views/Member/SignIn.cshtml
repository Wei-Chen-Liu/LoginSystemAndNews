@{
    ViewBag.Title = "Sign In";
}


<link href="~/Content/Member.css" rel="stylesheet" />

<main>
    <div class="member-page">
        <div class="title">登入會員</div>
        <div class="member-input-area">
            <input class="account-input form-control" value="" name="account-input" placeholder="請輸入帳號"/>
            <p class="err-message" id="account-err"></p>
            <input class="password-input form-control" value="" name="password-input" placeholder="請輸入密碼"/>
            <p class="err-message" id="password-err"></p>
        </div>
        <div class="member-btn-area">
            <div class="register-and-forget">
                <button class="register-forget-btn" onclick="location.href='@Url.Action("Register","Member")'">
                    註冊
                </button>
                <button class="register-forget-btn" onclick="location.href='@Url.Action("ForgetPassword","Member")'">
                    忘記密碼
                </button>
            </div>
            <button class="sign-in-btn">
                登入
            </button>
        </div>
    </div>
</main>
